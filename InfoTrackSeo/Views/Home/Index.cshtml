@using InfoTrackSeo.Controllers
@using InfoTrackSeo.Helpers
@model InfoTrackSeo.Models.HomeViewModel

@{
    ViewBag.Title = "Home Page";
    var formName = "crawlForm";
}

@using (Html.BeginForm("Crawl", "Home", FormMethod.Post, new { name = formName, id = formName }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Uri, new { @class = "col-form-label" })
        @Html.TextBoxFor(m => m.Uri, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Keyword, new { @class = "col-form-label" })
        @Html.TextBoxFor(m => m.Keyword, new { @class = "form-control" })
    </div>

    <input type="submit" value="Submit" class="btn btn-primary btn-sm" />
}

<h3>Results</h3>
<ul class="list-group">
    <li class="list-group-item row">
        <div class="col-md-3">
            @Html.LabelFor(m => m.Uri, new { @class = "col-form-label" })
            @Html.DisplayFor(m => m.Uri)
        </div>
        <div class="col-md-3">
            @Html.LabelFor(m => m.Keyword, new { @class = "col-form-label" })
            @Html.DisplayFor(m => m.Keyword)
        </div>
        <div class="col-md-3">
            @Html.LabelFor(m => m.LinkCount, new { @class = "col-form-label" })
            @Html.DisplayFor(m => m.LinkCount)
        </div>
        <div class="col-md-3">
            @Html.LabelFor(m => m.LinkLocations, new { @class = "col-form-label" })
            @foreach (var location in Model.LinkLocations)
            {
                <p>Result Number: @Html.DisplayFor(m => location)</p>
            }
        </div>
    </li>
</ul>